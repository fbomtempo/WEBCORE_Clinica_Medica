@model IEnumerable<WEBCORE_Clinica_Medica.Models.Dominio.Movimentacao>

@{
    ViewData["Title"] = "Movimentações";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/search-box.css" />
</head>

<h1>Listar Movimentações</h1>

<p class="pb-3">
    <a asp-action="Create">Inserir Novo</a>
</p>
<form asp-action="Index" method="get" class="pb-3">
    <input type="text" placeholder="Digite o nome do produto" name="Produto" value="@ViewData["FilterByProduct"]" class="input-pesquisa" />
    <input type="submit" value="Pesquisar" class="botao-pesquisa btn-primary ml-1" />
    <a asp-action="Index"> | Limpar</a>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.movTipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.produto.descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.movTipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantidade)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id">Visualizar</a>
                    <!--<a asp-action="Delete" asp-route-id="@item.id">Deletar</a>-->
                </td>
            </tr>
        }
    </tbody>
</table>
